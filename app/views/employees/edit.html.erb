<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3>Sửa thông tin nhân viên</h3>
    </div>
    <div class="title_right">
      <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">Go!</button>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Thêm khách hàng <small>những khách hàng mới hoàn toàn</small></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Settings 1</a>
                </li>
                <li><a href="#">Settings 2</a>
                </li>
              </ul>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <br />
          <%=form_for @employee, url: employees_path, method: 'POST', :html => {:class => 'form-horizontal form-label-left'} do |f| %>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Họ và Tên<span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :name, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">SĐT<span class="required">*</span>
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :phone, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Địa chỉ nhà</label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= f.text_field :address, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">Phòng ban
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                 <%= f.text_field :department, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">Chức vụ
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                 <%= f.text_field :position, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">Giới tính</label>
              <div class="checkbox col-md-2 col-sm-2 col-xs-12">
                <label>
                  <%= f.radio_button :gender, 0, :checked => true, class: 'flat' %> Nam
                </label>
              </div>
              <div class="checkbox col-md-3 col-sm-2 col-xs-12">
                <label>
                  <%= f.radio_button :gender, 1, :checked => false, class: 'flat' %> Nữ
                </label>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3 col-sm-3 col-xs-12">Lương hiện tại
              </label>
              <div class="col-md-6 col-sm-6 col-xs-12">
                 <%= f.text_field :salary, class: 'form-control col-md-7 col-xs-12' %>
              </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
              <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                <%= link_to 'Xóa nhân viên này', employee_path(@employee), :class => 'btn btn-danger', :method => :delete, data: {:confirm => "Bạn có chắc là muốn xóa nhân viên này?" } %>
                <%= f.submit 'Sửa thông tin', class: 'btn btn-success'%>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
