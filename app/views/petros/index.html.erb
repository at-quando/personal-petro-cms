<div class="page-title">
  <div class="title_left">
    <h3>Lịch sử giao dịch<small>Các giao dịch cụ thể của doanh nghiệp.</small></h3>
  </div>
</div>
<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Danh sách các giao dịch theo dòng thời gian</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings 1</a>
              </li>
              <li><a href="#">Settings 2</a>
              </li>
            </ul>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <table id="datatable-buttons1" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Chủ xe</th>
              <th>Biển số xe</th>
              <th>SĐT</th>
              <th>Giao dịch vào</th>
              <th>Giá trị giao dịch </th>
              <th>Loại khách hàng</th>
              <th>Thuộc công ty</th>
              <th>Tác vụ</th>
            </tr>
          </thead>

          <tbody>
            <% @petros.each do |petro| %>
              <tr>
                <td><%= petro.customer.name %></td>
                <td><%= petro.customer.car_number %></td>
                <td><%= petro.customer.phone %></td>
                <td>
                  <% if petro.day_fuel %>
                    <%= petro.day_fuel.strftime('%d/%m/%Y %H:%M') %>
                  <% end %>
                </td>
                <td><%= convert_money(petro.money) %></td>
                <td><%= petro.customer.type_customer %></td>
                <td><%= petro.customer.company %></td>
                <td>
                  <%= link_to "Chi tiết", customer_path(petro.customer), { :class => 'btn btn-warning' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
